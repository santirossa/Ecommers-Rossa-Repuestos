<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/admin/assets/css/admin.css">
</head>
<body>
  <div class="admin-wrapper">
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <div class="logo">
          <i class="fas fa-truck"></i>
          <span>Rossa Repuestos</span>
        </div>
        <button class="sidebar-toggle" id="sidebarToggle">
          <i class="fas fa-bars"></i>
        </button>
      </div>

      <nav class="sidebar-nav">
        <a href="/admin/dashboard" class="nav-item <%= active === 'dashboard' ? 'active' : '' %>">
          <i class="fas fa-chart-line"></i>
          <span>Dashboard</span>
        </a>
        <a href="/admin/products" class="nav-item <%= active === 'products' ? 'active' : '' %>">
          <i class="fas fa-boxes-stacked"></i>
          <span>Productos</span>
        </a>
        <a href="/admin/orders" class="nav-item <%= active === 'orders' ? 'active' : '' %>">
          <i class="fas fa-shopping-cart"></i>
          <span>Pedidos</span>
        </a>
        <a href="/admin/categories" class="nav-item <%= active === 'categories' ? 'active' : '' %>">
          <i class="fas fa-tags"></i>
          <span>Categor√≠as</span>
        </a>
      </nav>

      <div class="sidebar-footer">
        <div class="user-info">
          <i class="fas fa-user-shield"></i>
          <span><%= user.name %></span>
        </div>
        <button class="logout-btn" onclick="logout()">
          <i class="fas fa-sign-out-alt"></i>
          <span>Salir</span>
        </button>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <header class="top-bar">
        <button class="mobile-toggle" id="mobileToggle">
          <i class="fas fa-bars"></i>
        </button>
        <h1 class="page-title"><%= title.split(' - ')[0] %></h1>
        <div class="top-bar-right">
          <span class="admin-badge">Admin</span>
        </div>
      </header>

      <div class="content-area">
        <%- body %>
      </div>
    </main>
  </div>

  <!-- Toast Notification -->
  <div class="toast-container" id="toastContainer"></div>

  <script src="/admin/assets/js/admin.js"></script>
</body>
</html>
